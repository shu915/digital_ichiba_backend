{
  "family": "digital-ichiba-task",
  "taskRoleArn": "arn:aws:iam::575357958164:role/DigitalIchibaEcsTaskRole",
  "executionRoleArn": "arn:aws:iam::575357958164:role/DigitalIchibaEcsTaskExecRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "digital-ichiba",
      "image": "575357958164.dkr.ecr.ap-northeast-1.amazonaws.com/digital-ichiba-ecr:latest",
      "essential": true,
      "memory": 384,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "APP_JWT_AUD", "value": "digital-ichiba-rails" },
        { "name": "APP_JWT_ISS", "value": "digital-ichiba-next" },
        { "name": "AWS_BUCKET", "value": "aws-training-shu" },
        { "name": "NEXT_URL", "value": "https://aws-training-shu.com" },
        { "name": "PLATFORM_FEE_PERCENT", "value": "0.04" },
        { "name": "RAILS_ENV", "value": "production" },
        { "name": "SHIPPING_CENTS", "value": "500" }
      ],
      "secrets": [
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:STRIPE_SECRET_KEY::"
        },
        {
          "name": "STRIPE_CONNECT_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:STRIPE_CONNECT_WEBHOOK_SECRET::"
        },
        {
          "name": "STRIPE_CHECKOUT_WEBHOOK_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:STRIPE_CHECKOUT_WEBHOOK_SECRET::"
        },
        {
          "name": "APP_JWT_PUBLIC_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:APP_JWT_PUBLIC_KEY::"
        },
        {
          "name": "SECRET_KEY_BASE",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:SECRET_KEY_BASE::"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:DB_HOST::"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:DB_NAME::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:DB_USER::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:575357958164:secret:digital-ichiba-9eAozm:DB_PASSWORD::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/digital-ichiba",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "digital-ichiba",
          "awslogs-create-group": "true",
          "mode": "non-blocking",
          "max-buffer-size": "25m"
        }
      }
    }
  ]
}